classDiagram
    %% ========= Central use-case block =========
    class iUc1ControlEntry {
        <<block>>
        +pUser
        +pAdmin
        +pCamera
        +pAccessPoint
        --
        readSecurityCard()
        validateSecurityCard()
        displayCardStatus()
        scanBiometricData()
        authenticateBiometricData()
        displayAuthenticationStatus()
        logEntryData()
        unlockAccessPoint()
        lockAccessPoint()
        disableUserAccount()
        logAccountData()
        alarm()
        resetAlarm()
    }

    %% ========= Actor proxy blocks =========
    class ibUser {
        <<actor>>
        +reqRequestEntry()
        +scanFingerprint()
        +requestExit()
    }

    class ibAdmin {
        <<actor>>
        +reqProcessAlert()
    }

    class ibCamera {
        <<actor>>
        +reqTakeSnapshot()
    }

    class ibAccessPoint {
        <<actor>>
        +reqUnlockAccessPoint()
        +reqLockAccessPoint()
    }

    %% ========= Interface-labelled connectors =========
    ibUser        --> iUc1ControlEntry : I_User_Uc1ControlEntry
    ibAdmin       --> iUc1ControlEntry : I_Admin_Uc1ControlEntry
    ibCamera      --> iUc1ControlEntry : I_Camera_Uc1ControlEntry
    ibAccessPoint --> iUc1ControlEntry : I_AccessPoint_Uc1ControlEntry
