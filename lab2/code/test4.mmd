flowchart TD
    %% ===== Styles =====
    classDef actor fill:#e6f7ff,stroke:#3399ff,stroke-dasharray:4 2;

    %% ===== Actors / objects =====
    User[[User]]:::actor
    Admin[[Admin]]:::actor
    Camera[[Camera]]:::actor
    AccessPoint[[Access Point]]:::actor

    %% ===== Activity nodes =====
    start((Start))
    a1[readSecurityCard]
    a2[takePicture]
    d1{ScFailCount &lt; 3?}
    a3[flagSecurityCardFailure]

    a4[validateSecurityCard]
    d2{CardStatus Valid?}
    a5[displayCardStatus]

    a6[scanBiometricData]
    d3{BioFailCount &lt; 3?}
    a7[flagBiometricFailure]

    a8[authenticateBiometricData]
    a9[displayAuthenticationStatus]
    d4{BioData Authenticated?}

    a10[logEntryData]
    a11[unlockAccessPoint]

    a12[disableUserAccount]
    a13[logAccountData]
    a14[alarm]
    a15[resetAlarm]

    end((End))

    %% ===== Control flow =====
    start --> a1
    a1 -->|First Request| a2
    a1 --> d1

    d1 -- Yes --> a3 --> d1
    d1 -- No  --> a4 --> d2

    d2 -- No  --> a3
    d2 -- Yes --> a5 --> a6

    a6 --> d3
    d3 -- Yes --> a7 --> d3
    d3 -- No  --> a8 --> a9 --> d4

    d4 -- Yes --> a10 --> a11 --> end
    d4 -- No  --> a12 --> a13 --> a14 --> a15 --> end

    %% ===== Reference links (dashed) =====
    User -.-> a1
    Camera -.-> a2
    User -.-> a6
    Admin -.-> a12
    Admin -.-> a15
    AccessPoint -.-> a11
